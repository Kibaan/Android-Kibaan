<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">

    <kibaan.android.ui.SmartButton
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button2"
        android:background="#FF0000"
        android:text="角丸/枠線有/背景有"
        app:borderWidth="1dp"
        app:borderColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        app:cornerRadius="15dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
    />

    <kibaan.android.ui.SmartButton
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="#ff5500"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/white"
        android:layout_marginRight="20dp"
        android:text="枠線有/背景有"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/button1"
        app:layout_constraintLeft_toRightOf="@id/button1"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        app:cornerRadius="15dp"
        app:borderColor="@android:color/white"
        app:borderWidth="1dp"
        android:text="角丸/枠線有/背景無"
        app:layout_constraintLeft_toLeftOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/button1"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button1"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        app:borderColor="@android:color/white"
        app:borderWidth="1dp"
        android:text="枠線有/背景無"
        app:layout_constraintLeft_toLeftOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button2"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button2"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="#0055FF"
        app:cornerRadius="15dp"
        android:textColor="@android:color/white"
        android:text="角丸/枠線無/背景有"
        app:layout_constraintLeft_toLeftOf="@id/button3"
        app:layout_constraintTop_toBottomOf="@id/button3"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button3"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="#00AA55"
        android:textColor="@android:color/white"
        android:text="枠線無/背景有"
        app:layout_constraintLeft_toLeftOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/button4"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button4"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        app:cornerRadius="15dp"
        android:textColor="@android:color/white"
        android:text="角丸/枠線無/背景無"
        app:layout_constraintLeft_toLeftOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button5"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button5"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:text="枠線無/背景無"
        app:layout_constraintLeft_toLeftOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@id/button6"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button6"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:text="アイコン表示"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
        app:cornerRadius="30dp"
        app:iconImage="@mipmap/checkbox_on"
        app:iconScale="h:0.3"
        app:iconRightInset="0.35"
        app:layout_constraintLeft_toLeftOf="@id/button7"
        app:layout_constraintTop_toBottomOf="@id/button7"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button7"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button10"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:text="アイコン表示"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
        app:iconImage="@mipmap/checkbox_off"
        app:iconScale="h:0.3"
        app:iconRightInset="0.35"
        app:layout_constraintLeft_toLeftOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@id/button8"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button8"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/close_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="閉じる"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
        app:cornerRadius="20dp"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:layout_marginBottom="20dp"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/set_image_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:text="setImageされる"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/button9"
        app:layout_constraintTop_toBottomOf="@id/button9"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button9"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/set_image_change_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:text="左のボタンにsetImage"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/button10"
        app:layout_constraintTop_toBottomOf="@id/button10"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button10"/>

    <kibaan.android.ui.EllipseButton
        android:id="@+id/circle_button"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:background="#FF0000"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
        app:layout_constraintDimensionRatio="1:1"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/set_image_button"
        app:layout_constraintLeft_toLeftOf="@id/set_image_button"
        android:layout_marginTop="10dp"
        app:cornerRadius="25dp"
        android:textSize="7dp"
        android:text="円\n枠線有\n背景有"
    />

    <kibaan.android.ui.EllipseButton
        android:id="@+id/circle_button_2"
        android:layout_width="40dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/circle_button"
        app:layout_constraintTop_toTopOf="@id/circle_button"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:layout_marginLeft="4dp"
        android:text="円\n枠線有\n背景無"
        android:textSize="7dp"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
    />

    <kibaan.android.ui.EllipseButton
        android:layout_width="40dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/circle_button_2"
        app:layout_constraintTop_toTopOf="@id/circle_button_2"
        app:layout_constraintDimensionRatio="1:1"
        android:background="#0055FF"
        android:textColor="@android:color/white"
        android:layout_marginLeft="4dp"
        android:text="円\n枠線無\n背景有"
        android:textSize="7dp"
    />

    <kibaan.android.ui.EllipseButton
        android:id="@+id/ellipse_button"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="#FF0000"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/set_image_change_button"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/set_image_change_button"
        android:textSize="7dp"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
        android:text="楕円\n枠線有\n背景有"
    />

    <kibaan.android.ui.EllipseButton
        android:id="@+id/ellipse_button_2"
        android:layout_width="40dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@id/ellipse_button"
        app:layout_constraintTop_toTopOf="@id/ellipse_button"
        android:textSize="7dp"
        android:text="楕円\n枠線有\n背景無"
        android:layout_marginLeft="4dp"
        android:textColor="@android:color/white"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
        android:background="@android:color/transparent"
    />

    <kibaan.android.ui.EllipseButton
        android:layout_width="40dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@id/ellipse_button_2"
        app:layout_constraintTop_toTopOf="@id/ellipse_button_2"
        android:textSize="7dp"
        android:text="楕円\n枠線無\n背景有"
        android:layout_marginLeft="4dp"
        android:textColor="@android:color/white"
        android:background="#0055FF"
    />

    <kibaan.android.ios.UIButton
        android:id="@+id/text_color_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="文字色変更"
        app:defaultTextColor="#555555"
        app:highlightedTextColor="#FF0000"
        app:selectedTextColor="#00FF00"
        app:disabledTextColor="#999999"
        app:layout_constraintTop_toBottomOf="@id/circle_button"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
    />

    <kibaan.android.ui.SmartButton
        android:id="@+id/background_color_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="背景変更"
        app:selectedBackgroundColor="#000055"
        app:disabledTextColor="#999999"
        app:selectedTextColor="@android:color/white"
        app:disabledBackgroundColor="#666666"
        android:background="#FFFFFF"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/circle_button"
        app:layout_constraintLeft_toRightOf="@id/text_color_button"
        android:layout_marginLeft="10dp"
    />

    <kibaan.android.ui.SmartButton
        android:id="@+id/bgImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="背景画像"
        android:textSize="50sp"
        app:defaultImage="@drawable/rounded_corner"
        android:background="@color/clear"
        app:layout_constraintTop_toBottomOf="@id/text_color_button"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        />

    <kibaan.android.ui.SmartButton
        android:id="@+id/bgSelectedImageButton"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="1"
        android:background="@color/clear"
        app:selectedImage="@drawable/rounded_corner"
        app:layout_constraintTop_toBottomOf="@id/text_color_button"
        app:layout_constraintLeft_toRightOf="@+id/bgImageButton"
        android:layout_marginLeft="10dp"
        />

    <kibaan.android.sample.screen.sub.SampleCustomView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>