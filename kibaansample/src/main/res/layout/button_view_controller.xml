<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">

    <kibaan.android.ui.SmartButton
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button2"
        android:background="#FF0000"
        android:text="角丸/枠線有/背景有"
        app:borderWidth="1dp"
        app:borderColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        app:cornerRadius="15dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
    />

    <kibaan.android.ui.SmartButton
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="#ff5500"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/white"
        android:layout_marginRight="20dp"
        android:text="枠線有/背景有"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/button1"
        app:layout_constraintLeft_toRightOf="@id/button1"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        app:cornerRadius="15dp"
        app:borderColor="@android:color/white"
        app:borderWidth="1dp"
        android:text="角丸/枠線有/背景無"
        app:layout_constraintLeft_toLeftOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/button1"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button1"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        app:borderColor="@android:color/white"
        app:borderWidth="1dp"
        android:text="枠線有/背景無"
        app:layout_constraintLeft_toLeftOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button2"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button2"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="#0055FF"
        app:cornerRadius="15dp"
        android:textColor="@android:color/white"
        android:text="角丸/枠線無/背景有"
        app:layout_constraintLeft_toLeftOf="@id/button3"
        app:layout_constraintTop_toBottomOf="@id/button3"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button3"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="#00AA55"
        android:textColor="@android:color/white"
        android:text="枠線無/背景有"
        app:layout_constraintLeft_toLeftOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/button4"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button4"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        app:cornerRadius="15dp"
        android:textColor="@android:color/white"
        android:text="角丸/枠線無/背景無"
        app:layout_constraintLeft_toLeftOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button5"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button5"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:text="枠線無/背景無"
        app:layout_constraintLeft_toLeftOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@id/button6"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button6"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:text="アイコン表示"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
        app:cornerRadius="30dp"
        app:iconImage="@mipmap/checkbox_on"
        app:iconScale="h:0.3"
        app:iconRightInset="0.35"
        app:layout_constraintLeft_toLeftOf="@id/button7"
        app:layout_constraintTop_toBottomOf="@id/button7"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button7"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button10"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:text="アイコン表示"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
        app:iconImage="@mipmap/checkbox_off"
        app:iconScale="h:0.3"
        app:iconRightInset="0.35"
        app:layout_constraintLeft_toLeftOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@id/button8"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button8"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/close_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="閉じる"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
        app:cornerRadius="20dp"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:layout_marginBottom="20dp"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/set_image_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:text="setImageされる"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/button9"
        app:layout_constraintTop_toBottomOf="@id/button9"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button9"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/set_image_change_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:text="左のボタンにsetImage"
        app:borderWidth="1dp"
        app:borderColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/button10"
        app:layout_constraintTop_toBottomOf="@id/button10"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/button10"/>

</android.support.constraint.ConstraintLayout>