<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <kibaan.android.ui.SegmentedButton
        android:id="@+id/segment"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#BBBBBB"
        app:columnSize="3"
        app:horizontalSpacing="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:names="あ,い,う,え,お,か"
        app:rowSize="2"
        app:verticalSpacing="1dp" />

    <kibaan.android.ui.ScrollSegmentedButton
        android:id="@+id/scrollSegment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFBBBB"
        app:layout_constraintTop_toBottomOf="@+id/segment"
        app:scrollButtonWidth="110dp" />

</androidx.constraintlayout.widget.ConstraintLayout>