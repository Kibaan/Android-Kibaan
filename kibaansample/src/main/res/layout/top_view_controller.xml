<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/hadoken_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#BBBBBB"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitCenter"
    />

    <kibaan.android.ui.SegmentedButton
        android:id="@+id/segment"
        app:layout_constraintTop_toBottomOf="@id/hadoken_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:horizontalSpacing="10"
        app:verticalSpacing="1"
        app:names="あ,い,う,え,お,か"
        app:rowSize="2"
        app:columnSize="3"
        android:background="#BBBBBB"
    />

    <kibaan.android.ui.ScrollSegmentedButton
        android:id="@+id/scrollSegment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:scrollButtonWidth="110dp"
        android:background="#FFBBBB"
        app:layout_constraintTop_toBottomOf="@+id/segment"/>

    <kibaan.android.ui.SmartTextField
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/scrollSegment"
    />


    <kibaan.android.ui.SmartButton
        android:id="@+id/page_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="#229933"
        android:text="画面遷移確認画面へ"
        android:textColor="@android:color/white"
        app:cornerRadius="15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@id/table_button"
        app:layout_constraintRight_toRightOf="@id/table_button"
        app:layout_constraintBottom_toTopOf="@id/count_up_button"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/count_up_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:background="#DD8855"
        android:text="カウントアップ"
        android:textColor="@android:color/white"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@id/connection_button"
        app:layout_constraintLeft_toLeftOf="@id/table_button"
        app:layout_constraintRight_toRightOf="@id/table_button"
    />

    <kibaan.android.ui.SmartButton
        android:id="@+id/connection_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:background="#998855"
        android:text="通信確認画面へ"
        android:textColor="@android:color/white"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@id/table_button"
        app:layout_constraintLeft_toLeftOf="@id/table_button"
        app:layout_constraintRight_toRightOf="@id/table_button"
    />

    <kibaan.android.ui.SmartButton
        android:id="@+id/table_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:background="#0088ff"
        android:text="テーブル画面へ"
        android:textColor="@android:color/white"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@id/button_button"
        app:layout_constraintLeft_toLeftOf="@id/button_button"
        app:layout_constraintRight_toRightOf="@id/button_button"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/button_button"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:background="#FF5500"
        android:text="ボタン確認画面へ"
        android:textColor="@android:color/white"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@id/sub_button"
        app:layout_constraintLeft_toLeftOf="@id/sub_button"
        app:layout_constraintRight_toRightOf="@id/sub_button"/>

    <kibaan.android.ui.SmartButton
        android:id="@+id/sub_button"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/darker_gray"
        android:text="サブ画面へ"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>