<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="controller"
                type="kibaan.sample.screen.top.TopViewController"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#BBBBBB"
                android:src="@drawable/hadoken"
                android:scaleType="fitCenter"
        />

        <android.support.constraint.Guideline
                android:id="@+id/guide_horizontal_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>

        <kibaan.ios.UIButton
                android:id="@+id/set_image_test_button"
                android:layout_width="0dp" android:layout_height="100dp"
                app:layout_constraintBottom_toTopOf="@id/data_binding_test_button"
                app:layout_constraintLeft_toLeftOf="@id/data_binding_test_button"
                app:layout_constraintRight_toRightOf="@id/guide_horizontal_center"
                android:layout_marginBottom="10dp"
        />

        <kibaan.ios.UIButton
                android:id="@+id/set_image_state_change_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/set_image_test_button"
                app:layout_constraintBottom_toBottomOf="@id/set_image_test_button"
                app:layout_constraintRight_toRightOf="@id/data_binding_test_button"
                app:layout_constraintLeft_toRightOf="@id/set_image_test_button"/>

        <kibaan.ui.SmartButton
                android:id="@+id/data_binding_test_button"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="#F98855"
                android:text="バインディング確認"
                android:onClick="@{controller::actionOrderButton}"
                app:layout_constraintBottom_toTopOf="@id/connection_button"
                app:layout_constraintLeft_toLeftOf="@id/table_button"
                app:layout_constraintRight_toRightOf="@id/table_button"
        />

        <kibaan.ui.SmartButton
                android:id="@+id/connection_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="#998855"
                android:text="通信確認画面へ"
                android:textColor="@android:color/white"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@id/table_button"
                app:layout_constraintLeft_toLeftOf="@id/table_button"
                app:layout_constraintRight_toRightOf="@id/table_button"
        />

        <kibaan.ui.SmartButton
                android:id="@+id/table_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="#0088ff"
                android:text="テーブル画面へ"
                android:textColor="@android:color/white"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@id/sub_button"
                app:layout_constraintLeft_toLeftOf="@id/sub_button"
                app:layout_constraintRight_toRightOf="@id/sub_button"/>

        <kibaan.ui.SmartButton
                android:id="@+id/sub_button"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/darker_gray"
                android:text="サブ画面へ"
                android:textColor="@android:color/white"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</layout>